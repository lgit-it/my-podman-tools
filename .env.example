# ====== Domini (Nginx reverse proxy) ======
ODOO_DOMAIN=odoo.lgit.it
N8N_DOMAIN=n8n.lgit.it

# ====== Let's Encrypt ======
ENABLE_LETSENCRYPT=1
LETSENCRYPT_EMAIL=lg@lgit.it

# ====== Versioni / immagini ======
ODOO_BRANCH=18.0
ODOO_CORE_REPO=https://github.com/odoo/odoo.git

POSTGRES_IMAGE=docker.io/library/postgres:16
N8N_IMAGE=docker.io/n8nio/n8n:1.39.1
NGINX_IMAGE=docker.io/library/nginx:1.25-alpine

# ====== Podman / rete ======
PODMAN_NET=appnet

# ====== Persistenza ======
BASE_DIR=/srv/containers
SECRETS_DIR=/srv/containers/secrets
EXPORTS_DIR=./exports

# SELinux label per volumi (es. ":Z" su RHEL/Fedora). Su Ubuntu lascia vuoto.
VOLUME_LABEL=:Z

# ====== Porte host (bind localhost) ======
# Puoi cambiare (es. 8069->18069) se hai conflitti.
BIND_LOCALHOST=1
POSTGRES_HOST_PORT=5432
ODOO_HOST_PORT=8069
ODOO_LONGPOLL_HOST_PORT=8072
N8N_HOST_PORT=5678
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ====== UID/GID Odoo nell'immagine ======
ODOO_UID=1089
ODOO_GID=1089
